{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
			<div class="row">
					{{ form_start(form) }}
					<div class="form-group row">
						<div class="col-form-label text-right">{{form_label(form.name)}}</div>
						<div class="col-sm-8">{{form_widget(form.name , {'attr': {'placeholder': 'name'}})}}</div>
					</div>
					<div class="form-group row">
						<div class="col-form-label text-right">{{form_label(form.forname)}}</div>
						<div class="col-sm-8">{{form_widget(form.forname, {'attr': {'placeholder': 'forname'}})}}</div>
					</div>
					<div class="form-group row">
						<div class=" col-form-label text-right">{{form_label(form.telephone)}}</div>
						<div class="col-sm-8">{{form_widget(form.telephone, {'attr': {'placeholder': 'telephone'}})}}</div>
					</div>
			         <div class="row text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                     </div>
					{{form_end(form)}}
				</div>
</div>
{% endblock %}
